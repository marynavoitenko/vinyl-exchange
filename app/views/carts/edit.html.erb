<%= form_for @line_item do |f| %>

  <% content_for :cart_content do %>
    <tr>
      <th scope="col"><%= link_to @line_item.vinyl.artist.name, artist_path(@line_item.vinyl.artist) %></th>
      <th scope="col"><%= link_to @line_item.vinyl.title, vinyl_path(@line_item.vinyl) %></th>
      <th scope="col">$<%= @line_item.vinyl.price %></th>
      <th scope="col"><%= f.text_field :quantity %></th>
      <th scope="col"><%= f.submit "Save", { class: 'btn btn-primary' } %></th>
    </tr>
  <% end %>

  <%= render 'carts/cart_table' %>

<% end %>
